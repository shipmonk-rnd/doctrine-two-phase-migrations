{
    "name": "shipmonk/doctrine-two-phase-migrations",
    "description": "Two phase migrations for Doctrine ORM: before and after deploying new codebase version",
    "license": ["MIT"],
    "require": {
        "nette/finder": ">=2.4.0",
        "doctrine/orm": ">=2.7.0",
        "symfony/console": ">=4.0.0"
    },
    "require-dev": {
        "doctrine/annotations": ">=1.6.0",
        "editorconfig-checker/editorconfig-checker": "^10.2.3",
        "phpstan/phpstan": "^1.3.1",
        "phpstan/phpstan-phpunit": "^1.0.0",
        "phpstan/phpstan-strict-rules": "^1.1.0",
        "phpunit/phpunit": "^9.5.8",
        "slevomat/coding-standard": "^7.0.15"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "ShipMonk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ShipMonk\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@check:ec",
            "@check:cs",
            "@check:types",
            "@check:tests"
        ],
        "check:ec": "ec src",
        "check:cs": "phpcs",
        "check:types": "phpstan analyse -vvv",
        "check:tests": "phpunit -vvv tests",
        "fix:cs": "phpcbf"
    }
}
