{
    "name": "shipmonk/doctrine-two-phase-migrations",
    "description": "Two phase migrations for Doctrine ORM: before and after deploying new codebase version",
    "license": ["MIT"],
    "require": {
        "php": "^7.4|^8.0",
        "nette/finder": "^2.4.0",
        "doctrine/annotations": "^1.13.0",
        "doctrine/dbal": "^2.13.1|^3.3.1",
        "doctrine/orm": "^2.7.0",
        "symfony/console": "^4.0.0|^5.0.0"
    },
    "require-dev": {
        "composer/semver": "^3.3",
        "doctrine/persistence": "^2.5.0",
        "editorconfig-checker/editorconfig-checker": "10.3.0",
        "phpstan/phpstan": "1.6.2",
        "phpstan/phpstan-phpunit": "1.1.1",
        "phpstan/phpstan-strict-rules": "1.2.0",
        "phpunit/phpunit": "~9.5.20",
        "slevomat/coding-standard": "7.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ocramius/package-versions": true
        }
    },
    "autoload": {
        "psr-4": {
            "ShipMonk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ShipMonk\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@check:ec",
            "@check:cs",
            "@check:types",
            "@check:tests"
        ],
        "check:ec": "ec src",
        "check:cs": "phpcs",
        "check:types": "phpstan analyse -vvv",
        "check:tests": "phpunit -vvv tests",
        "fix:cs": "phpcbf"
    }
}
